<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StartXamarin.SubModule.Planetary.PlanetaryPage"
             Title="행성 리스트">
	<StackLayout>
		<ListView x:Name="planetsListView" RowHeight="80" HasUnevenRows="True">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name}" TextColor="Black" Detail="{Binding Distance}" DetailColor="Red"></TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
    </StackLayout>
</ContentPage>